    <div class="buttons">
        <button class="yes" onclick="alert('Yay! ‚ù§Ô∏è')">Yes</button>
        <button class="no" onclick="addMoreYes()">No</button>
    </div>

    <script>
        function addMoreYes() {
            let container = document.querySelector('.buttons');

            let yesButton = document.createElement('button');
            yesButton.innerText = "Yes";
            yesButton.className = "yes";
            yesButton.onclick = function() { alert('Yay! ‚ù§Ô∏è'); };

            yesButton.style.position = "absolute";
            yesButton.style.left = Math.random() * 80 + "%";
            yesButton.style.top = (Math.random() * 60 + 20) + "vh";

            document.body.appendChild(yesButton);

            createHeart();
            createFloatingText();
            createCat();
        }

        function createHeart() {
            let heart = document.createElement('div');
            heart.innerHTML = "‚ù§Ô∏è";
            heart.className = "floating-heart";
            heart.style.left = Math.random() * 100 + "vw";
            heart.style.top = "100vh";
            heart.style.animationDuration = (Math.random() * 2 + 3) + "s";

            document.body.appendChild(heart);

            setTimeout(() => {
                heart.remove();
            }, 5000);
        }

        function createFloatingText() {
            let phrases = [
                "I love you ‚ù§Ô∏è",
                "You're my sunshine ‚òÄÔ∏è",
                "Forever & Always ‚ù§Ô∏è",
                "You make my heart skip a beat ‚ù§Ô∏è",
                "Be mine? ‚ù§Ô∏è",
                "You're my everything ‚ù§Ô∏è",
                "Hugs & Kisses ‚ù§Ô∏è",
                "You're perfect! ‚ù§Ô∏è"
            ];

            let text = document.createElement('div');
            text.innerText = phrases[Math.floor(Math.random() * phrases.length)];
            text.className = "floating-text";
            text.style.left = Math.random() * 90 + "vw";
            text.style.top = "100vh";
            text.style.animationDuration = (Math.random() * 4 + 5) + "s";

            document.body.appendChild(text);

            setTimeout(() => {
                text.remove();
            }, 8000);
        }

        function createCat() {
            let cats = ["üê±", "üò∫", "üòª", "üêà", "üêà‚Äç‚¨õ", "üò∏", "üòΩ"];
            let cat = document.createElement('div');
            cat.innerText = cats[Math.floor(Math.random() * cats.length)];
            cat.className = "floating-cat";
            cat.style.left = Math.random() * 90 + "vw";
            cat.style.top = "100vh";
            cat.style.animationDuration = (Math.random() * 4 + 6) + "s";

            document.body.appendChild(cat);

            setTimeout(() => {
                cat.remove();
            }, 8000);
        }
    </script>

